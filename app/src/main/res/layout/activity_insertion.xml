<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InsertionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            style="@style/SCREEN">

            <!-- EventID Edit Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="@dimen/_12sdp"
                android:text="Fill the upcoming event informations"
                android:textAlignment="center"
                android:textSize="@dimen/_26sdp"
                style="@style/TEXTVIEWS"
                android:layout_marginBottom="@dimen/_5sdp"

                />

            <EditText
                android:id="@+id/etEventId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EventID"
                android:padding="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- Name Edit Text -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:padding="@dimen/_12sdp"
                android:inputType="text"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- Date Edit Text -->
            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />

            <!-- Time Edit Text -->
            <EditText
                android:id="@+id/etTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />

            <!-- Location Edit Text -->
            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:padding="@dimen/_12sdp"
                android:inputType="text"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- Organizer Edit Text -->
            <EditText
                android:id="@+id/etOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organizer"
                android:padding="@dimen/_12sdp"
                android:inputType="text"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- EventType Edit Text -->
            <EditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Type"
                android:padding="@dimen/_12sdp"
                android:inputType="text"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- Capacity Edit Text -->
            <EditText
                android:id="@+id/etCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Capacity"
                android:padding="@dimen/_12sdp"
                android:inputType="number"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"/>

            <!-- Description Edit Text -->
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />
            <EditText
                android:id="@+id/etTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temperature"
                android:text="-273"
                android:editable="false"
                android:focusable="false"
                android:clickable="false"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />
            <EditText
                android:id="@+id/etHum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Humidity"
                android:text="-1"
                android:editable="false"
                android:focusable="false"
                android:clickable="false"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />
            <EditText
                android:id="@+id/etWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Warning"
                android:text="0"
                android:editable="false"
                android:focusable="false"
                android:clickable="false"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:theme="@style/ThemeOverlay.SearchView"
                android:layout_marginBottom="@dimen/_5sdp"
                android:backgroundTint="?attr/colorPrimary"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearFlyer"
                android:layout_marginEnd="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a flyer"
                    style="@style/TEXTVIEWS"
                    />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Upload event flyer image"
                android:src="@drawable/ic_image"
                android:layout_marginBottom="@dimen/_5sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearIcon"
                android:layout_marginStart="@dimen/_5sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload an Icon"
                    style="@style/TEXTVIEWS"
                    />
            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Upload Organizer icon"
                app:srcCompat="@drawable/ic_icon"
                android:layout_marginBottom="@dimen/_5sdp"/>
            </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload Images"
                android:textColor="@color/white"
                android:background="@drawable/buttonshape"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/progressbar_blue2"
                />

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="Save Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        android:background="@drawable/buttonshape"/>

</androidx.constraintlayout.widget.ConstraintLayout>
